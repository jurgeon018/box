[Unit]
Description=uWSGI Emperor service

[Service]
ExecStartPre=/bin/bash -c 'mkdir -p /home/username/projects/project_name/src/config; chown username:www-data /home/username/projects/project_name/src/config'
ExecStart=/usr/local/bin/uwsgi --emperor /home/username/projects/project_name/src/config 
Restart=always
KillSignal=SIGQUIT
Type=notify
NotifyAccess=all

[Install]
WantedBy=multi-user.target 




